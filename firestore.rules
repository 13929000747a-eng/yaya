rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Questions collection - read only for authenticated users
    match /questions/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Temporarily allow write for seeding. Revert to 'if false' for production!
    }
    
    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Assessment results - users can only access their own results
    match /assessments/{assessmentId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
